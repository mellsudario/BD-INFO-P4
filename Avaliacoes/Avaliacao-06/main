SELECT TB_CURSO.CURSO_NOME
FROM TB_CURSO
INNER JOIN TB_CURSO_PROFESSOR ON TB_CURSO_PROFESSOR.CURSO_ID = TB_CURSO.ID;

.print

SELECT TB_PROFESSOR.PROFESSOR_NOME
FROM TB_PROFESSOR
  INNER JOIN TB_CURSO_PROFESSOR ON TB_CURSO_PROFESSOR.PROFESSOR_ID = TB_PROFESSOR.ID;
